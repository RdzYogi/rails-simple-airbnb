<%= simple_form_for [@flat] do |f| %>
  <div class="d-flex flex-column">
    <%= f.label :name %>
    <%= f.text_field :name, class:"mb-3"%>
    <%= f.label :address %>
    <%= f.text_field :address, class:"mb-3" %>
    <%= f.label :description %>
    <%= f.text_field :description, class:"mb-3" %>
    <%= f.label :price_per_night %>
    <%= f.number_field :price_per_night, class:"mb-3" %>
    <%= f.label :number_of_guests %>
    <%= f.number_field :number_of_guests, class:"mb-3" %>
    <% text = @flat.id.nil? ? 'Create' : 'Update' %>
    <%= f.submit "#{text} flat", class:"w-25"%>
  </div>
<% end %>
